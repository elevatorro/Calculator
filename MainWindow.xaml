        <Button Content="5" x:Name="five" FontSize="44" HorizontalAlignment="Left" Height="56" Margin="117,160,0,0" VerticalAlignment="Top" Width="107" Click="but_click5"/>
        <Button Content="8" x:Name="eight" FontSize="44" HorizontalAlignment="Left" Height="56" Margin="117,216,0,0" VerticalAlignment="Top" Width="107" Click="but_click8"/>
        <Button Content="3" x:Name="three" FontSize="44" HorizontalAlignment="Left" Height="56" Margin="224,104,0,0" VerticalAlignment="Top" Width="107" Click="but_click3" Grid.ColumnSpan="2"/>
        <Button Content="6" x:Name="six" FontSize="44" HorizontalAlignment="Left" Height="56" Margin="224,160,0,0" VerticalAlignment="Top" Width="107" Click="but_click6" Grid.ColumnSpan="2"/>
        <Button Content="9" x:Name="nine" FontSize="44" HorizontalAlignment="Left" Height="56" Margin="224,216,0,0" VerticalAlignment="Top" Width="107" Click="but_click9" Grid.ColumnSpan="2"/>

        <Button Content="=" x:Name="ravno" FontSize="44" HorizontalAlignment="Left" Height="56" Margin="52.442,104,0,0" VerticalAlignment="Top" Width="107" Grid.Column="1" Click="but_equal"/>
        <Button Content="+" x:Name="plus" FontSize="44" HorizontalAlignment="Left" Height="56" Margin="52.442,160,0,0" VerticalAlignment="Top" Width="107" Grid.Column="1" Click="but_plus"/>

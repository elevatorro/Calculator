        <Button Content="/" x:Name="division" FontSize="44" HorizontalAlignment="Left" Height="56" Margin="224,272,0,0" VerticalAlignment="Top" Width="107" Grid.ColumnSpan="2" Click="but_division"/>
        <Button Content="C" x:Name="clear" FontSize="44" HorizontalAlignment="Left" Height="56" Margin="10,272,0,0" VerticalAlignment="Top" Width="107" Click="but_clear"/>

    </Grid>
</Window>
